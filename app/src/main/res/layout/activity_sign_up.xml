<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.SignUpActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage|text"
            android:ems="10"
            android:id="@+id/txtLastname"
            android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Ingresa tu apellido"
            android:fontFamily="@font/anonymous_pro"
            android:textColor="#000000"
            android:textColorHint="#121212"
            android:minHeight="48dp"/>

    <TextView
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:fontFamily="@font/anonymous_pro"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:foregroundTint="#000000"
            android:textColorHint="#353535"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword"/>

    <TextView
            android:text="Apellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:fontFamily="@font/anonymous_pro"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/txtName"
            android:textColor="#000000"
            android:foregroundTint="#000000"
            android:textColorHint="#353535"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtName"
            android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Ingresa tu nombre"
            android:minHeight="48dp"
            android:textColor="#000000"
            android:fontFamily="@font/anonymous_pro"
            android:foregroundTint="#000000"
            android:textColorHint="#353535"
            android:autofillHints=""/>

    <TextView
            android:text="Usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:fontFamily="@font/anonymous_pro"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:foregroundTint="#000000"
            android:textColorHint="#353535"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtUsername"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Ingresa tu usuario"
            android:minHeight="48dp"
            android:textColor="#000000"
            android:fontFamily="@font/anonymous_pro"
            android:foregroundTint="#000000"
            android:textColorHint="#353535"
            android:autofillHints=""/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/txtPassword"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Ingresa tu contraseña"
            android:fontFamily="@font/anonymous_pro"
            android:textColor="#000000"
            android:textColorHint="#121212"
            android:minHeight="48dp"/>

    <TextView
            android:text="Contraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:fontFamily="@font/anonymous_pro"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/txtUsername"
            android:textColor="#000000"
            android:foregroundTint="#000000"
            android:textColorHint="#353535"/>

    <Button
            android:text="Registrarme"
            android:layout_width="217dp"
            android:layout_height="49dp"
            android:id="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cornerRadius="15dp"
            android:textColor="#000000"
            android:backgroundTint="#05E2FF"
            android:fontFamily="@font/anonymous_pro"
            android:textStyle="bold"
            app:icon="@drawable/rocket"
            app:iconPadding="2dp"
            app:iconSize="24dp"
            app:iconTint="#DC312B"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLastname"
            android:onClick="signUp"/>

    <TextView
            android:text="Ingresa cualquier dato | DEMO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="56dp"
            android:textColor="#FA6210"
            android:textStyle="bold|italic"
            android:fontFamily="@font/anonymous_pro"
            app:layout_constraintHorizontal_bias="0.497"/>

</androidx.constraintlayout.widget.ConstraintLayout>