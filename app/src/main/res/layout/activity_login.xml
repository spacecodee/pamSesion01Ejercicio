<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.LoginActivity">

    <TextView
            android:text="Contraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:fontFamily="@font/anonymous_pro"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="75dp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintTop_toBottomOf="@+id/txtUsername"
            android:textColor="#000000"
            android:foregroundTint="#000000"
            android:textColorHint="#353535"/>

    <TextView
            android:text="Usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:fontFamily="@font/anonymous_pro"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="140dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:foregroundTint="#000000"
            android:textColorHint="#353535"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtUsername"
            android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Ingresa tu usuario"
            android:minHeight="48dp"
            android:textColor="#000000"
            android:fontFamily="@font/anonymous_pro"
            android:foregroundTint="#000000"
            android:textColorHint="#353535"
            android:autofillHints=""/>

    <Button
            android:text="Iniciar Sesión"
            android:layout_width="217dp"
            android:layout_height="49dp"
            android:id="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cornerRadius="15dp"
            android:textColor="#000000"
            android:backgroundTint="#05E2FF"
            android:fontFamily="@font/anonymous_pro"
            android:textStyle="bold"
            app:icon="@drawable/rocket"
            app:iconPadding="2dp"
            app:iconSize="24dp"
            app:iconTint="#DC312B"
            android:layout_marginTop="67dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword"
            android:onClick="login"/>

    <Button
            android:text="Registrate aquí"
            android:layout_width="217dp"
            android:layout_height="49dp"
            android:id="@+id/btnRegister"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cornerRadius="15dp"
            android:textColor="#000000"
            android:backgroundTint="#1EB1C5"
            android:fontFamily="@font/anonymous_pro"
            android:textStyle="bold"
            app:icon="@drawable/bowling_96"
            app:iconPadding="2dp"
            app:iconSize="24dp"
            app:iconTint="#DC312B"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin"
            android:onClick="goToSignUp"/>

    <TextView
            android:text="Ingresa cualquier dato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="92dp"
            android:textColor="#FA6210"
            android:textStyle="bold|italic"
            android:fontFamily="@font/anonymous_pro"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/txtPassword"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Ingresa tu contraseña"
            android:fontFamily="@font/anonymous_pro"
            android:textColor="#000000"
            android:textColorHint="#121212"
            android:minHeight="48dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>